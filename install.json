{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./right-click.js"
      },
      {
        "type": "style",
        "src": "./style.css"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "backgroundColor":{
        "title" : "Background Color",
        "default": "#000000",
        "format": "color",
        "type": "string"
      },
      "modifiers":{
        "type": "object",
        "title": "Tools to Include",
        "properties":{
            "bold": {
              "title": "Bold",
              "type": "boolean",
              "default": false
            },
            "highlight": {
              "title": "Hightlight",
              "type": "boolean",
              "default": false
            },
            "format_italic": {
              "title": "Italic",
              "type": "boolean",
              "default": false
            },
            "code": {
              "title": "Code Formatter",
              "type": "boolean",
              "default": false
            }
          }
        }
      }
    }
}
