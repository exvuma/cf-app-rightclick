            "justifyCenter": {
              "title": "Justify Center",
              "type": "boolean",
              "default": true
            },
            "justifyFull": {
              "title": "Justify Full",
              "type": "boolean",
              "default": true
            },
            "justifyLeft": {
              "title": "Justify Left",
              "type": "boolean",
              "default": true
